<launch>
  <arg name="port" default="/dev/ttyUSB0" doc ="the serial port for connection" />
  <arg name="baud" default="115200" doc ="the serial baudrate" />
  <arg name="robot_type" default="mycobot"/>
  <arg name="arm_type" default="rarm"/>
  <arg name="urdf_path" default="$(find mycobot_description)/urdf/$(arg robot_type)/mycobot_$(arg arm_type).urdf.xacro"/>

  <!-- Driver -->
  <node pkg="mycobot_communication" type="mycobot_interface.py" name="$(arg arm_type)_mycobot_bridge"  output="screen" >
    <param name="port" value="$(arg port)" />
    <param name="baud" value="$(arg baud)" />
    <param name="model" value="$(arg robot_type)" />
  </node>

  <!-- robot state publisher for tf -->
  <param name="$(arg arm_type)_robot_description" command="$(find xacro)/xacro '$(arg urdf_path)'" />
  <node name="$(anon robot_state_publisher)" pkg="robot_state_publisher" type="robot_state_publisher" />

</launch>
